{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/node/preload/*.d.ts",
    "src/node/global/*",
    "src/node/webpreload/index.d.ts"
],
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "esnext",
    "module": "esnext",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@global/*": [
        "src/node/global/*"
      ]

    }
  }
}
